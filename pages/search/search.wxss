/* pages/search/search.wxss */
page{
    min-width: 100%;
    min-height: 100%;
}
.content{
    background: #3a3a3a;
    min-height: 100%;
    min-width: 100%;
}
.top{
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 30%;
    align-items: center;
    justify-content: space-around;
    padding-top: 10px;
}
.srk{
    border: white solid 1px;
    border-radius: 5px;
    height: 35px;
    line-height: 35px;
    font-size: 15px;
    width: 80%;
    color: white;
}
.btn{
    height: 35px;
    line-height: 35px;
    font-size: 12px;
    border-radius: 5px;
    border: white solid 1px;
    width: 14%;
    color: white;
    text-align: center;
}
.inputValue{
    height: 20px;
    width: 100%;
    color: white;
    font-size: 10px;
    line-height: 20px;
    padding-left: 10px;
}
.separator{
    height: 2px;
    width: 100%;
    background-color: gray;
    opacity: 0.5;
    margin-top: 3px;
}

@import "../index/index.wxss"